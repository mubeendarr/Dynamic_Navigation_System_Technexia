@{
}
@model IEnumerable<NavigationSystem.Models.NavigationCategory>

@{
    ViewData["Title"] = "Add Categories";
}

<h1>Add Categories</h1>
<form method="post">

    <!-- Add category fields here -->

    <table class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Gender</th>
                <th>Sub Category</th>
                <th>Clothes Type</th>
                <th>Clothes Type Sub</th>
                <th>Color Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@category.Gender</td>
                    <td>@category.SubCategory</td>
                    <td>@category.ClothesTypeCategory</td>
                    <td>@category.ClothesTypeSubCategory</td>
                    <td>@category.ColorCategory</td>
                    <td>
                        <button type="button" class="btn btn-danger" onclick="deleteCategory(@category.CategoryId)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>

@section Scripts {
    <script>
        function deleteCategory(categoryId) {
            if (confirm("Are you sure you want to delete this category?")) {
                window.location.href = "/Navigations/Delete/" + categoryId;
            }
        }
    </script>
}
