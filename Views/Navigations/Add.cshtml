@model NavigationSystem.Models.AddCategoryViewModel

<h1>Add Categories</h1>
<form method="post">

    <div class="mt-3">
        <label class="form-label">MainCategory</label>
        <input type="text" class="form-control" asp-for="CategoryName" />
    </div>

    <div class="mt-3">
        <label class="form-label">Gender</label>
        <input type="text" class="form-control" asp-for="Gender" />
    </div>

    <div class="mt-3">
        <label class="form-label">SubCategory</label>
        <input type="text" class="form-control" asp-for="SubCategory" />
    </div>

    <div class="mt-3">
        <label class="form-label">ClothesType</label>
        <input type="text" class="form-control" asp-for="ClothesTypeCategory" />
    </div>

    <div class="mt-3">
        <label class="form-label">ClothesTypeSub</label>
        <input type="text" class="form-control" asp-for="ClothesTypeSubCategory" />
    </div>

    <div class="mt-3">
        <label class="form-label">ColorCategory</label>
        <input type="text" class="form-control" asp-for="ColorCategory" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>